                <tr class="hidden-xs">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="hidden-md hidden-xs hidden-sm"></td>
                    <td class="hidden-md hidden-xs hidden-sm"></td>
                    <td colspan="3" class="text-right text-muted">
                        <small>
                            平均花费/总花费：<br />
                            @{
                                decimal total_cost = 0;//总花费
                                foreach (var item in Model)
                                {
                                    total_cost += @item.Cost;
                                }
                                decimal average = Math.Round(total_cost / i,2);//平均花费
                            }
                            &#165;@average / @total_cost
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    @*<td class="text-right text-muted hidden-sm">
                            <small>
                                总贡献：<br />
                                50
                                &nbsp;&nbsp;
                            </small>
                        </td>*@

                    <td class="text-right text-muted hidden-xs hidden-md hidden-sm">
                        <small>
                            总数：<br />
                            @ViewBag.TM @*球队比赛总数*@
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="text-right text-muted">
                        <small>
                            平均：<br />
                            @{
                                string total_Attendance = null;//出勤率
                                int t_A =0;//计算出勤率
                                foreach (var item in Model)
                                {
                                    t_A += Convert.ToInt32(@item.Attendance);
                                }
                                total_Attendance = (t_A/i).ToString();
                            }
                            @total_Attendance%
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="text-right text-muted">
                        <small>
                            平均：<br />
                            @{
                                string total_B_Appointment = null;//鸽子率
                                int t_B = 0;//计算鸽子率
                                foreach (var item in Model)
                                {
                                    t_B += Convert.ToInt32(@item.B_Appointment);
                                }
                                total_B_Appointment = (t_B / i).ToString();
                            }
                            @total_B_Appointment%
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="text-right text-muted">
                        <small>
                            平均：<br />
                            @{
                                string total_LeaveRate = null;//请假率
                                int t_L = 0;//计算请假率
                                foreach (var item in Model)
                                {
                                    t_L += Convert.ToInt32(@item.LeaveRate);
                                }
                                total_LeaveRate = (t_L / i).ToString();
                            }
                            @total_LeaveRate%
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="text-right text-muted hidden-xs hidden-md hidden-sm">
                        <small>
                            总数：<br />
                            0
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="text-right text-muted hidden-xs hidden-md hidden-sm">
                        <small>
                            总数：<br />
                            0
                            &nbsp;&nbsp;
                        </small>
                    </td>
                    <td class="hidden-sm"></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <div class="panel-body text-right">
            共：<b>@i</b> 名队员
        </div>

        <div class="clearfix"></div>
    </div>
</body>
</html>



        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th style="width: 20px;" class="hidden-xs"></th>
                    <th style="width: 20px;" class="hidden-xs"></th>
                    <th style="width: 3em;" class="text-right">
                        @*<a href="/Team/%E8%8A%AC%E8%8A%B3GD/Players">N.</a>
                            <small class="glyphicon glyphicon-arrow-up"></small>*@
                    </th>
                    <th style="width: 1em;"></th>
                    <th class="realname-length">
                        <a>姓名</a>
                    </th>
                    <th style="width: 4.5em;" class="hidden-md hidden-xs hidden-sm">
                        <a>职位</a>
                    </th>
                    <th class="hidden-md hidden-xs hidden-sm">
                        <a>位置</a>
                    </th>

                    <th style="width: 5em;" class="text-right">
                        <a>花费</a>
                    </th>
                    @*<th style="width: 6em;" class="text-right hidden-sm hidden-xs">
                            <a href="/Team/%E8%8A%AC%E8%8A%B3GD/Players?Order=ActiveScore%20ASC">活跃度</a>
                        </th>*@
                    <th style="width: 4em;" class="text-right hidden-xs hidden-md hidden-sm">
                        <a>出场</a>
                    </th>

                    <th style="width: 5.5em;" class="text-right">
                        <a>出勤率</a>
                    </th>
                    <th style="width: 5.5em;" class="text-right hidden-xs">
                        <a>鸽子率</a>
                    </th>
                    <th style="width: 5.5em;" class="text-right hidden-xs">
                        <a>请假率</a>
                    </th>
                    <th style="width: 4em;" class="hidden-md hidden-sm hidden-xs text-right">
                        <a>进球</a>
                    </th>
                    <th style="width: 4em;" class="hidden-md hidden-sm hidden-xs text-right">
                        <a>助攻</a>
                    </th>
                    <th style="width: 1em;"></th>
                    <th style="width: 7em;" class="hidden-sm hidden-xs text-center">
                        <a>上次出勤</a>
                    </th>
                    <th style="width: 20px;" class="hidden-xs"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted hidden-xs">
                                @{
                                    i++;
                                }
                                @i
                            </td>
                            <td class="hidden-xs">
                                @{
                                    if (item.Position == "队长")
                                    {
                                        <span class="glyphicon glyphicon-star text-muted" title="队长" data-toggle="tooltip"></span>
                                    }
                                    else
                                    {
                                        <span class="glyphicon glyphicon-cloud text-muted" style="color: #e2e2e2" title="队员" data-toggle="tooltip"></span>
                                    }
                                }
                            </td>
                            <td class="text-right">
                                <a data-toggle="popover" data-placement="right" data-value="46953">


                                </a>
                            </td>
                            <td></td>
                            <td>
                                <a href="/TeamManagement/MemberDetailed/@item.ID" data-toggle="popover" data-placement="right" data-value="46953">
                                    @item.UserName
                                </a>
                            </td>
                            <td class="hidden-md hidden-xs hidden-sm">
                                @item.Position
                            </td>
                            <td title="中锋" class="hidden-md hidden-xs hidden-sm">
                                @item.Location
                            </td>
                            <td class="text-danger text-right">
                                &#165;@item.Cost
                            </td>
                            @*<td class="text-right hidden-sm hidden-xs">
                                    僵尸
                                </td>*@
                            <td class="text-right hidden-xs hidden-md hidden-sm">
                                @item.Appearance 
                            </td>
                            <td class="text-right">
                                @item.Attendance%
                            </td>
                            <td class="text-right hidden-xs">
                                @item.B_Appointment%
                            </td>
                            <td class="text-right hidden-xs">
                                @item.LeaveRate%
                            </td>
                            <td class="text-right">
                                @item.Goal
                            </td>
                            <td class="text-right">
                                @item.Assists
                            </td>
                            <td></td>
                            <td class="text-right hidden-sm hidden-xs">
                                @item.LastAttendance
                            </td>

                            <td class="hidden-xs">
                            </td>
                        </tr>
                    }
                }

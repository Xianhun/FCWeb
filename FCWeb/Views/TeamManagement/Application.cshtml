@model IEnumerable<FCWeb.Models.Users>
@{
    ViewBag.Title = "Application";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>欢迎页面-X-admin2.0</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/TeamManagement/font.css">
    <link rel="stylesheet" href="~/Content/TeamManagement/xadmin.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="~/Content/Home/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/pe-icon-7.css" rel="stylesheet" type="text/css" />
    <!--Slider-->
    <link rel="stylesheet" href="~/Content/Home/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Content/Home/owl.theme.default.min.css" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style type="text/css">
        .attend-item {
            margin: 5px 5px;
            padding: 5px;
            width: 7em;
            display: block;
        }
    </style>
</head>
<body>
    <div class="panel panel-default">

        <ul id="playersIndexer" class="nav nav-tabs" style="margin-top:10px; margin-bottom:20px;">
            <li style="margin-left:10px;">
                <a href="/TeamManagement/Application" tabindex="全部队员列表">
                    <span class="glyphicon glyphicon-user"></span>
                    <span class="hidden-xs">全部<span class="hidden-sm hidden-xs">队员</span></span>
                </a>
            </li>
            <li class="" title="添加本地队员">
                <a href="CreatePlayers">
                    <span class="glyphicon glyphicon-plus-sign hidden-sm"></span>
                    <span class="hidden-xs">添加<span class="hidden-sm">本地队员</span></span>
                </a>
            </li>
        </ul>
        <script type="text/javascript">
                $('#playersIndexer').find('a').filter(function () { return $(this).text().trim() == '全部队员'; }).parent().addClass('active');
        </script>
        <div class="panel-margin">


            <div class="row" style="margin-bottom:20px;">
                <div class="col-md-8 col-sm-8 col-xs-8">
                    <div class="btn-toolbar">
                        <div class="btn-group" style="float:right">
                            <a href="/TeamManagement/TeamMember" class="btn btn-default">
                                <span class="glyphicon glyphicon-user"></span>
                                <span class="hidden-xs">队员列表</span>
                            </a>
                            <a href="/TeamManagement/Application" class="btn btn-default active">
                                <span class="glyphicon glyphicon-transfer"></span>
                                <span class="hidden-xs">申请中</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>



        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th style="width: 20px;" class="hidden-xs"></th>
                    <th style="width: 20px;" class="hidden-xs"></th>
                    <th style="width: 3em;" class="text-right">
                        @*<a href="/Team/%E8%8A%AC%E8%8A%B3GD/Players">N.</a>
                        <small class="glyphicon glyphicon-arrow-up"></small>*@
                    </th>
                    <th style="width: 1em;"></th>
                    <th class="realname-length">
                        姓名
                    </th>
                    @*<th style="width: 4.5em;" class="hidden-md hidden-xs hidden-sm">
                        <a>职位</a>
                    </th>*@
                    <th class="hidden-md hidden-xs hidden-sm">
                        位置
                    </th>
                    <th class="hidden-md hidden-xs hidden-sm">
                        性别
                    </th>
                    <th class="hidden-md hidden-xs hidden-sm">
                        年龄
                    </th>
                    <th style="width: 20px;" class="hidden-xs"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted hidden-xs">
                                @{
                                    i++;
                                }
                                @i
                            </td>
                            <td class="hidden-xs">
                                <span class="glyphicon glyphicon-cloud text-muted" style="color: #e2e2e2" title="申请球员" data-toggle="tooltip"></span>
                            </td>
                            <td class="text-right">
                                <a data-toggle="popover" data-placement="right" data-value="46953">

                                </a>
                            </td>
                            <td></td>
                            <td>
                                <a href="/TeamManagement/ApplicationDetailed/@item.ID" data-toggle="popover" data-placement="right" data-value="46953">
                                    @item.UserName
                                </a>
                            </td>
                            <td class="hidden-md hidden-xs hidden-sm">
                                @item.Location
                            </td>
                            <td class="hidden-md hidden-xs hidden-sm">
                                @item.Sex
                            </td>
                            <td class="hidden-md hidden-xs hidden-sm">
                                @item.Age
                            </td>
                            <td class="hidden-xs">
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="panel-body text-right">
            共：<b>@i</b> 名队员
        </div>

        <div class="clearfix"></div>
    </div>
</body>
</html>





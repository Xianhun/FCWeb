
@{
    ViewBag.Title = "Createplayers";
    Layout = null;
}
<head>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/TeamManagement/font.css">
    <link rel="stylesheet" href="~/Content/TeamManagement/xadmin.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="~/Content/Home/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/pe-icon-7.css" rel="stylesheet" type="text/css" />
    <!--Slider-->
    <link rel="stylesheet" href="~/Content/Home/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Content/Home/owl.theme.default.min.css" />
    <link rel="stylesheet" type="text/css" href="https://www.layuicdn.com/layui-v2.5.6/css/layui.css" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style>
        .ui-autocomplete {
            max-height: 250px;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .input-group-addon {
            width: 50px;
        }

        .radio {
            padding-left: 5px;
            padding-left: 22px;
        }
    </style>
</head>
<div class="panel panel-default">
    <div class="page-header" style="text-align: center;">
        <h1>
            添加本地球员
        </h1>
    </div>
    <div class="panel-body">
        <form action=" " class="form-horizontal" data-ajax="true" data-ajax-begin="handlerBegin" data-ajax-failure="handlerFailure" data-ajax-method="POST" data-ajax-success="handlerSuccess" id="form0" method="post">
            <div class="validation-summary-valid" data-valmsg-summary="true">
                <ul>
                    <li style="display:none"></li>
                </ul>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label required" >球员名称</label>
                <div class="col-md-3 col-sm-4">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="layui-icon layui-icon-username"></i></span>
                        <input class="form-control" data-format="dbc2sbc" data-val="true" data-val-required="赛程日期 字段是必需的。" id="Date" name="Date" placeholder="请输入球员名称" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label required">场上位置</label>
                <div class="col-md-3 col-sm-4">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="layui-icon layui-icon-right"></i></span>
                        <input class="form-control" data-format="dbc2sbc" data-val="true" data-val-required="赛程日期 字段是必需的。" id="Date" name="Date" placeholder="请输入球员位置" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label required" for="Time">性别</label>
                <div class="col-md-3 col-sm-4">
                    <div class="input-group">
                        <span class="input-group-addon"><label for="Time" class="glyphicon glyphicon-time"></label></span>
                        <input class="form-control" data-format="dbc2sbc" data-val="true" data-val-required="赛程日期 字段是必需的。" id="Date" name="Date" placeholder="请输入球员位置" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="Location">地点</label>
                <div class="col-md-9 col-sm-9">
                    <div class="input-group">
                        <span class="input-group-addon"><label for="Location" class="glyphicon glyphicon-map-marker cursor-hand "></label></span>
                        <input class="form-control" id="Location" name="Place" placeholder="赛程举办地点" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="MatchScore_OpponentTeamName">对手</label>
                <div class="col-md-7 col-sm-7">
                    <div class="input-group">
                        <span class="input-group-addon"><label id="labelOpponentTeamName" for="MatchScore_OpponentTeamName" class="glyphicon glyphicon-flag"></label></span>
                        <input class="form-control" id="MatchScore_OpponentTeamName" name="Rival" placeholder="对手" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label required" for="TotalAmount">总消费额</label>
                <div class="col-md-5 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-addon"> ¥&nbsp;</span>
                        <input Value="0.00" class="form-control" data-format="dbc2sbc" data-val="true" data-val-number="The field 总消费额 must be a number." data-val-required="总消费额不能为空" id="TotalAmount" name="SduFees" placeholder="设置赛事消费总额" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="PerAmount">每个队员费用</label>
                <div class="col-md-5 col-sm-6">
                    <div class="input-group">
                        <span class="input-group-addon"> ¥&nbsp;</span>
                        <input Value="" class="form-control" data-format="dbc2sbc" data-val="true" data-val-number="The field 每个队员费用 must be a number." id="PerAmount" name="PersonFees" placeholder="每个队员参加比赛所需费用" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="MaxAttendCount">参加人数</label>
                <div class="col-md-5 col-sm-6">
                    <div class="input-group">
                        <input class="form-control" id="MaxAttendCount" name="LimitNum" placeholder="最多参加人数，空表示不限" type="text" value="" />
                        <span class="input-group-addon">人</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="Note">备注</label>
                <div class="col-md-9 col-sm-9">
                    <textarea class="form-control" cols="20" id="Note" name="Note" rows="5">
</textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 col-sm-3 control-label" for="">
                </label>
                <div class="col-md-9 col-sm-9">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span>&nbsp;添加&nbsp;&nbsp;</button>
                    <button type="button" class="btn btn-default" id="back"><span class="glyphicon glyphicon-remove"></span>&nbsp;取消&nbsp;&nbsp;</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $("#back").click(function () {
        history.back(-1);
    });
</script>


@model IEnumerable<FCWeb.Models.TeamMembers>
@{
    ViewBag.Title = "Permission";
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    @*<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />*@
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/TeamManagement/font.css">
    <link rel="stylesheet" href="~/Content/TeamManagement/xadmin.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="~/Content/Home/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/pe-icon-7.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/TeamManagement/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="~/Scripts/TeamManagement/xadmin.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<style type="text/css">
    body {
        padding: 0px;
    }
</style>
<div class="panel panel-default">

    <ul id="calendarIndex" class="nav nav-tabs" style="margin-top:10px;margin-bottom:20px;">
        <li style="margin-left:10px;" title="球队信息">
            <a href="Permission">
                <span class="glyphicon glyphicon-th-list"></span>
                <span class="hidden-xs">权限管理</span>
            </a>
        </li>
    </ul>
    <script type="text/javascript">
        $('#calendarIndex').find('a').filter(function () { return $(this).text().trim() == '权限管理'; }).parent().addClass('active');
    </script>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th style="width: 20px;" class="hidden-xs"></th>
                <th style="width: 20px;" class="hidden-xs"></th>
                <th style="width: 3em;" class="text-right">
                    @*<a href="/Team/%E8%8A%AC%E8%8A%B3GD/Players">N.</a>
                        <small class="glyphicon glyphicon-arrow-up"></small>*@
                </th>
                <th style="width: 1em;"></th>
                <th class="realname-length">
                    姓名
                </th>
                @*<th style="width: 4.5em;" class="hidden-md hidden-xs hidden-sm">
                        <a>职位</a>
                    </th>*@
                <th class="hidden-md hidden-xs hidden-sm" style="width:50%">
                    拥有权限规则
                </th>
                <th class="hidden-md hidden-xs hidden-sm">
                    状态
                </th>
                <th class="hidden-md hidden-xs hidden-sm">
                    操作
                </th>
                <th style="width: 20px;" class="hidden-xs"></th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-muted hidden-xs">
                            @{
                                i++;
                            }
                            @i
                        </td>
                        <td class="hidden-xs">
                            <span class="glyphicon glyphicon-cloud text-muted" style="color: #e2e2e2" title="" data-toggle="tooltip"></span>
                        </td>
                        <td class="text-right">
                            <a data-toggle="popover" data-placement="right" data-value="46953">

                            </a>
                        </td>
                        <td></td>
                        <td>
                            @item.UserName
                        </td>
                        <td class="hidden-md hidden-xs hidden-sm">
                            @item.Permission
                        </td>
                        @{
                            if (item.PermissionStatus == "启用")
                            {
                                <td class="hidden-md hidden-xs hidden-sm">
                                    <span class="layui-btn layui-btn-normal layui-btn-mini">@item.PermissionStatus</span>
                                </td>
                            }
                            else
                            {
                                <td class="hidden-md hidden-xs hidden-sm">
                                    <span class="layui-btn layui-btn-danger layui-btn-normal layui-btn-mini">@item.PermissionStatus</span>
                                </td>
                            }
                        }
                        @{ if (item.Position != "队长")
                            {
                                <td class="hidden-md hidden-xs hidden-sm">
                                    <a title="编辑" onclick="x_admin_show('编辑', 'RoleAdd/@item.ID')" href="javascript:;">
                                        编辑
                                    </a>
                                </td>
                            }
                        }
                        <td class="hidden-xs">
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


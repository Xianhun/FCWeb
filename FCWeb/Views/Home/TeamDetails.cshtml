@model IEnumerable<FCWeb.Models.CreateTeams>
@{
    ViewBag.Title = "TeamDetails";
}

<div id="divHeader">
    <div class="container">
        <h1>
            @Html.DisplayFor(modelItem => Model.ElementAt(0).TeamName) <small class="hidden-xs">加入这支球队</small>
        </h1>
    </div>
</div>
<a data-type="19" data-tmpl="400x25" data-tmplid="2823" biz-url="http://www.alimama.com/?spm=0.0.0.0.tUsAVh" biz-text="足球衣服" biz-imgurl="null" data-rd="2" data-style="2" data-border="1" href="#"></a>
<div id="divContent">



    <div class="container">




        <table class="table table-bordered">
            <tr>
                <td style="width: 100px;" rowspan="4">
                    <img src="~/img/Logins/1.png" alt="@Html.DisplayFor(modelItem => Model.ElementAt(0).TeamName)" style="width:80px;" />
                </td>
                <td style="width: 8em;">
                    <label for="Captain">队长</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(0).TeamCptain)
                </td>
                <td style="width: 8em;">
                    <label for="CreateDate">创建时间</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(0).CreateTime)
                </td>
            </tr>
            <tr>
                <td>
                    <label for="PlayerCount">队员数目</label>
                </td>
                <td>
                    @ViewBag.Count 人
                </td>
                <td>
                    <label for="TotalMatchCount">球队比赛数目</label>
                </td>
                <td>
                    @ViewBag.M_Count 次
                </td>
            </tr>
            <tr>
                <td>
                    <label for="PublicType">球队公开类型</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(0).TeamOpenType)
                </td>
                <td>
                    <label for="City">城市</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(0).City)
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Responsor">赞助商名称</label>
                </td>
                <td colspan="3">
                    <a href="">@Html.DisplayFor(modelItem => Model.ElementAt(0).Sponsors)</a>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <span class="glyphicon glyphicon-flag text-info"></span> <label for="Description">球队介绍</label>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <pre class="no-style">
@Html.DisplayFor(modelItem => Model.ElementAt(0).TeamIntroduce)
            </pre>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <span class="glyphicon glyphicon-eye-open"></span> <label for="Rules">球队规章制度</label>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <pre class="no-style">
@Html.DisplayFor(modelItem => Model.ElementAt(0).Rule)
            </pre>
                </td>
            </tr>
            @*<tr>
                <td colspan="5">
                    <span class="glyphicon glyphicon-picture"></span> <label for="TeamPhoto">球队全家福</label>
                </td>
            </tr>
            <tr>
                <td colspan="5">

                    <img src="Http://www.qiulianwang.com/Upload/Images/TeamGallery/2013/11/1_allplayer_.JPG" alt="" class="img-responsive" />
                    <br />
                </td>
            </tr>*@

        </table>


        <div class="text-center">
            <form action="" class="form-signin" data-ajax="true" data-ajax-begin="handlerBegin" data-ajax-failure="handlerFailure" data-ajax-method="POST" data-ajax-success="handlerSuccess" id="form0" method="post">
                <input type="submit" value="申请加入" class="btn btn-primary btn-lg" />
            </form>
        </div>
    </div>
</div>

